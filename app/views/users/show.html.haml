.text-center
  - if @user.profile_image.blank?
    noimage
  - else
    = image_tag @user.profile_image, class: "avatar"
.text-center#user-description
  = @user.nickname
  - if user_signed_in?
    #follow_form
      - if current_user.following?(@user)
        #liked.btn.btn-default いいね済
      - else
        = render 'follow', {relationship: @relationship}
    %br= @user.profile_text

= link_to 'Back', root_path