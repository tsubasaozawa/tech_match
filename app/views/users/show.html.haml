= render 'user-header'
.section
  .container
    .hero-body
      .columns.is-mobile.is-centered
        - if @user.profile_image.blank?
          %figure.image
            = image_tag "https://static.mercdn.net/images/member_photo_noimage_thumb.png", class: "profile-image", style: "height: 250px; width: 200px;"
        - else
          %figure.image
            = image_tag @user.profile_image.url, class: "profile-image", style: "height: 250px; width: 200px;"
        .profile-info
          .profile-info__profile-top-box
            .profile-info__profile-top-box__user-nickname
              %span.title.is-5 #{@user.nickname}
            .profile-info__profile-top-box__user-fullname
              #{@user.lastname_kanji}#{@user.firstname_kanji}
            .profile-info__profile-top-box__follow-count
              .profile-info__profile-top-box__follow-count__followers
                Followers：#{@user.followers.count}
              .profile-info__profile-top-box__follow-count__following
                Following：#{@user.following.count}
            - if current_user.id == @user.id
              .profile-info__profile-top-box__user-info-edit
                = link_to({controller: "users", action: "edit", name: "edit_profile"}) do
                  .button Edit Profile
            - else
              #follow_form
                - if current_user.following?(@user)
                  #liked.button.btn-default フォロー済
                - else
                  = render 'follow', {relationship: @relationship}
            
    .hero-body
      .tabs.is-centered
        %ul
          %li.is-active
            = link_to "" do
              %span.icon.is-small
                %i.fa.fa-user
              %span This is me
          %li
            = link_to "" do
              %span.icon.is-small
                %i.fa.fa-archive
              %span My Works
          %li
            = link_to "" do
              %span.icon.is-small
                %i.fa.fa-file-text-o
              %span Documents
      .container
        - if current_user.id == @user.id
          - if @article.blank?
            .container.has-text-centered
              = link_to new_user_article_path(current_user) do
                .button This is meを作成する
            %br
          - else
            .container
              .container.has-text-right
                = link_to edit_user_article_path(current_user) do
                  .button This is meを編集する
              %br
              .tile.is-ancestor
                .tile.is-parent.is-1
                .tile.is-parent
                  - if @article.created_at == @article.updated_at
                    #{@article.created_at.strftime("%Y/%m/%d %H:%M")}
                  - else
                    #{@article.created_at.strftime("%Y/%m/%d %H:%M")}／#{@article.updated_at.strftime("%Y/%m/%d %H:%M")}
                .tile.is-parent
              .tile.is-ancestor
                .tile.is-parent.is-1
                .tile.is-vertical.is-parent
                  .tile.is-child.is-12
                    .container
                      .title.is-4.has-border-bottom.has-padding-bottom #{@article.first_title}
                  .tile.is-child
                    .container
                      #{@article.first_content}
                .tile.is-4.is-parent
                  .tile.is-child.has-text-centered
                    - if @article.first_image.blank?
                      = image_tag "https://static.mercdn.net/images/member_photo_noimage_thumb.png", class: "profile-image", style: "height: 330px; width: 250px"
                    - else
                      = image_tag @article.first_image.url, style: "height: 330px; width: 250px"

              %br
              .tile.is-ancestor
                .tile.is-4.is-parent
                  .tile.is-child.has-text-centered
