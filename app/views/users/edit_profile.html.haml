= render 'user-header'
.section
  .hero-body
    .container{ style: "padding: 0 80px;"}
      = form_with model: @user, local: true do |f|
        .box.columns
          .submenu.column.is-3{ style: "border-right: solid 1px #eee;"}
            = render 'user-edit-sidebar'
          .column
            .nav
              .nav-left
              .nav-center
                .nav-item{ style: "margin-bottom: 20px;"}
                  .title.is-2{ style: "margin-left: 40px;"} Edit Profile
              .nav-right.is-2

            .nav
              .nav-left
              .nav-right
                .nav-item
                  .label Acountname
                .nav-item
                  = f.text_field :nickname, class: "input", placeholder: "例）たろやん", type: "text", style: "width: 350px;"
            .nav
              .nav-left
              .nav-right
                .nav-item
                  .label Name
                .nav-item
                  = f.text_field :lastname_kanji, class: "input", placeholder: "例）山田 太郎", type: "text", style: "width: 350px;"

            .nav
              .nav-left
              .nav-right
                .nav-item
                  .label Biography
                .nav-item
                  = f.text_field :profile_text, class: "input", placeholder: "例）よろしくお願いします", type: "text", style: "width: 350px;"

            .columns.is-mobile
              .column.is-5
              .column.is-half.is-offset-one-quarte
                = f.label :profile_image, title: "クリックして画像選択" do
                  - if @user.profile_image.blank?
                    %figure.image
                      = image_tag "https://static.mercdn.net/images/member_photo_noimage_thumb.png", class: "profile-image", style: "height: 300px; width: 250px; margin-top: 20px;"
                  - else
                    %figure.image
                      = image_tag @user.profile_image.url, class: "profile-image", style: "height: 300px; width: 250px;"
                  = f.file_field :profile_image, class: "hidden-file-field"
            .nav
              .nav-left
              .nav-right
                .nav-item
                .nav-item
                  = f.submit class: "button"

          .column.is-2

= render 'shared/footer'