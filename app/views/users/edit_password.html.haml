= render 'user-header'
.section
  .hero-body
    .container{ style: "padding: 0 80px;"}
      = form_with model: @user, local: true do |f|
        .box.columns
          .submenu.column.is-3{ style: "border-right: solid 1px #eee;"}
            = render 'user-edit-sidebar'
          .column
            .nav
              .nav-left
              .nav-center
                .nav-item{ style: "margin-bottom: 20px;"}
                  .title.is-2 Edit Password
              .nav-right.is-2

            .nav
              .nav-left
                .nav-item.right-contents
                  .label Current Password
              .nav-center
                .nav-item
                  = f.text_field :current_password, class: "input", type: "text", style: "width: 350px;"
              .nav-right
            .nav
              .nav-left
                .nav-item.right-contents
                  .label New Password
              .nav-center
                .nav-item
                  = f.text_field :password, class: "input", placeholder: "6文字以上", type: "text", style: "width: 350px;"
              .nav-right
            .nav
              .nav-left
                .nav-item.right-contents
                  .label New Password, again
              .nav-center
                .nav-item
                  = f.text_field :password_confirmation, class: "input", placeholder: "6文字以上", type: "text", style: "width: 350px;"
              .nav-right
            .nav
              .nav-left
              .nav-center
                .nav-item
                  = f.submit class: "button is-success is-outlined"
              .nav-right

= render 'shared/footer'
