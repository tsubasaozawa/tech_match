<div class="form-field", style="width: 400px; margin: 0 auto;">
  <hr>
  <h2 class="title has-text-centered">パスワードリセット</h2>
    <div class="has-text-centered">
      <%= render "devise/shared/links" %>
    </div>
  <hr style= "margin-top: 10px;">

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

    <div class="field", style="margin-bottom: 40px;">
      <%= f.label "メールアドレス", class: "label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
      <%= render "devise/shared/error_messages", resource: resource %>
    </div>

    <div class="actions  has-text-centered">
      <%= f.submit "パスワードリセット", class: "button is-danger is-medium" %>
    </div>
  <% end %>
</div>
