.hero
  .hero-body{ style: "padding-bottom: 20px;"}
    .container.has-text-centered
      = link_to root_path do
        .title < > Geek Tech
        -# .subtitle @live in Geek
.nav.has-shadow
  .nav-left
  .nav-center
    .nav-item
      = link_to "" do
        About GeekTech
    .nav-item
      = link_to "" do
        About Author
  .nav-right

.nav.has-shadow
  .nav-left
  .nav-center
    .nav-item
      .control.has-addons
        %input.input{name: "search", placeholder: "キーワード検索", type: "search", style: "width: 250px;"}
        %a.button.is-black
          %i.fa.fa-search
          search
  - if user_signed_in?
    .nav-right
      .nav-item
        = link_to user_path(current_user) do
          My page
      -# .nav-item
      -#   = link_to "" do
      -#     Follow list
      .nav-item
        .buttons
          - if current_user.admin?
            .button.is-danger
              = link_to admin_member_users_path do
                %span.link-color-white Admin page
          .button
            = link_to destroy_user_session_path, method: :delete do
              Log out
  - else
    .nav-right
      .nav-item
        .buttons
          .button.is-black
            = link_to "", class: "" do
              .link-color-white Sign up
          .button
            = link_to "" do
              Log in
